@model NetsmartzOnlineStore.Models.CategoryModels
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">
    function CategoryValidation() {
        if ($('#CategoryName').val() == '') {
            $('#lblCatNameValid').show();
            document.getElementById("lblCatNameValid").innerHTML = '<p style="color:red; font-size:12px; margin-bottom: 0rem;">Required.</p>';
            return false;
        }
        if ($('#CategoryDescription').val() == '') {
            $('#lblCatDescValid').show();
            document.getElementById("lblCatDescValid").innerHTML = '<p style="color:red; font-size:12px; margin-bottom: 0rem;">Required.</p>';
            return false;
        }
        if ($('#MinPriceRange').val() == '') {
            $('#lblMinValid').show();
            document.getElementById("lblMinValid").innerHTML = '<p style="color:red; font-size:12px; margin-bottom: 0rem;">Required.</p>';
            return false;
        }
        if ($('#MaxPriceRange').val() == '') {
            $('#lblMaxValid').show();
            document.getElementById("lblMaxValid").innerHTML = '<p style="color:red; font-size:12px; margin-bottom: 0rem;">Required.</p>';
            return false;
        }
        if ($('#DisplayOrder').val() == '') {
            $('#lblDisplayOrderValid').show();
            document.getElementById("lblDisplayOrderValid").innerHTML = '<p style="color:red; font-size:12px; margin-bottom: 0rem;">Required.</p>';
            return false;
        }
        if ($('#MinPriceRange').val() >= $('#MaxPriceRange').val()) {
            $('#lblMinMaxValid').show();
            document.getElementById("lblMinMaxValid").innerHTML = '<p style="color:red; font-size:12px; margin-bottom: 0rem;">Max price must be greater.</p>';
            return false;
        }
    }
</script>

@if (Model.CategoryID_PK > 0)
{
    <h3>Edit Category</h3>
}
else
{
    <h3>Add Category</h3>
}

<form method="post">

        
    <div class="form-horizontal">
      @Html.HiddenFor(m => m.CategoryID_PK)
        <hr />
        <div class="form-group">
            <label class="control-label col-md-2">Category Name :<em>*</em></label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control", @maxlength = 50 } })
                <div id="lblCatNameValid" style="display:block;color:red; font-size:2pt;">
                </div>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Category Description :<em>*</em></label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.CategoryDescription, new { htmlAttributes = new { @class = "form-control", @maxlength = 50 } })
                <div id="lblCatDescValid" style="display:block;color:red; font-size:2pt;">
                </div>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Min Range :<em>*</em></label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.MinPriceRange, new { htmlAttributes = new { @class = "form-control", @maxlength = 50 } })
                <div id="lblMinValid" style="display:block;color:red; font-size:2pt;">
                </div>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Max Range :<em>*</em></label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.MaxPriceRange, new { htmlAttributes = new { @class = "form-control", @maxlength = 50 } })
                <div id="lblMaxValid" style="display:block;color:red; font-size:2pt;">
                </div>
                <div id="lblMinMaxValid" style="display:block;color:red; font-size:2pt;">
                </div>
            </div>
        </div>

        <div class="form-group">

            <label class="control-label col-md-2">Display Order:<em>*</em></label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.DisplayOrder, new { htmlAttributes = new { @class = "form-control", @maxlength = 50 } })
                <div id="lblDisplayOrderValid" style="display:block;color:red; font-size:2pt;">
                </div>
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" onclick="return CategoryValidation()" />
                <input type="button" value="Cancle" class="btn btn-default" onclick="javascript:document.location.href='@Url.Action("Index", "Category")'" />
            </div>

        </div>
    </div>
</form>

