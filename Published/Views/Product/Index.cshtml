@model List < NetsmartzOnlineStore.Models.ProductModels.ProductModelsDisplay>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .button {
        display: block;
        width: 115px;
        height: 44px;
        background: #4E9CAF;
        padding: 10px;
        text-align: center;
        border-radius: 5px;
        color: white;
        font-weight: bold;
        line-height: 25px;
    }
</style>
<div class="row">
    <div class="col-md-12">
        <div class="col-md-6">
            <h3>Products</h3>
        </div>
        <div class="col-md-3">
            <a href="@Url.Action("Create", "Product", new { catID = ViewBag.CategoryID})" class="button" style="margin-top:15px; text-decoration:none" data-toggle="tooltip" data-placement="top" title="Add Product">Add Product</a>
        </div>
        <div class="col-md-3">
            <a href="@Url.Action("Index", "Category")" class="button" style="margin-top:15px; text-decoration:none" data-toggle="tooltip" data-placement="top" title="Back To Category">Back</a>
        </div>
    </div>
</div>
<table cellpadding="10">
    <thead>
        <tr>

            <th><h4>List Of Products</h4></th>
        </tr>
    </thead>

    <tbody>
        <tr>
            <td><b>Product Name</b></td>
            <td style="padding-left:0px; padding-right:60px"><b>Product Description</b></td>
            <td><b>Quantity</b></td>
            <td><b>Price</b></td>
            <td><b>Discount (In Persent)</b></td>
            <td><b>Expiry Date</b></td>
            <td><b>Edit</b></td>
            <td><b>Delete</b></td>
        </tr>
        @foreach (var item in Model)
        {
            <tr>

                <td>@item.ProductName</td>
                <td style="padding-left:0px; padding-right:60px">@item.ProductDescription</td>
                <td>
                    @item.ProductQuantity
                </td>
                <td>@item.ProductPrice</td>
                <td>
                   @item.Discount
                </td>
                <td>
                    @Convert.ToDateTime(item.ExpiryDate).ToString("dd/MM/yyyy")
                </td>
                <td><a href="@Url.Action("Edit", "Product",new { id = item.ProductID_PK, catID = item.CategoryID_FK })"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span></a></td>
                <td>
                    <a href="@Url.Action("Delete","Product",new { id = item.ProductID_PK, catID = item.CategoryID_FK })">
                        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                    </a>
                </td>
            </tr>
        }

    </tbody>
</table>
